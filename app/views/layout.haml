!!!
%html{lang: "en", :'data-ng-app'=>"myApp", :'ng-app'=>""}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %meta{content: "", name: "Share your hockey drills, create, view and have fun"}/
    %meta{content: "", name: "Jason Scott"}/
    %link{href: "../../docs-assets/ico/favicon.png", rel: "shortcut icon"}/
    %title Share your Drills
    %link{:href => "/css/bootstrap.css", :rel => "stylesheet"}/
    :css
      body {
        padding-top: 50px;
      }
    %script{src: "https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"}
    %script{src: "https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"}
    %script{src: "/js/paper-full.min.js"}
    %script{src: "/js/options.js"}
    :css
      #sketx-canvas { 
      background:url(/img/hockey_rink_lg.jpg) no-repeat 
      }
      #thumbhockey { 
      background:url(/img/hockey_rink_sm.jpg) no-repeat;
      z-index: 100;
      }
        
  %body
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "/"} Share your Drills
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{href: "/"} Home
            %li
              %a{href: "/about"} About
    #content
      =yield
    %script{src: "https://code.jquery.com/jquery-1.10.2.min.js"}
    %script{src: "js/angular.min.js"}
    %script{src: "js/app.js"}
    %script{:src => "/js/bootstrap.js"}